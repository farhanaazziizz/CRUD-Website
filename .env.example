# Backend Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_PATH=./data/database.db

# Scheduler Configuration
NOTIFICATION_CHECK_CRON=0 8 * * *  # Daily at 8:00 AM
CLEANUP_CRON=0 2 * * 0             # Weekly cleanup on Sunday at 2:00 AM

# Application Settings
APP_NAME=ISO Certificate Management System
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Settings (for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Email Notifications (for future implementation)
# EMAIL_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@yourcompany.com

# Optional: Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2:00 AM
# BACKUP_RETENTION_DAYS=30

# Security (for production)
# SESSION_SECRET=your-session-secret-here
# JWT_SECRET=your-jwt-secret-here
# BCRYPT_ROUNDS=10